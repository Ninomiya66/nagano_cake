<h1>商品詳細</h1>

<table>

  <tr>

    <th>商品名</th>

    <td><%= @item.name %></td>

  </tr>

  <tr>

    <th>商品画像</th>

    <td><%= image_tag @item.get_image(200,200) %></td>

  </tr>

  <tr>

    <th>商品説明</th>

    <td><%= @item.introduction %></td>

  </tr>

  <tr>

    <th>販売状況</th>

    <td>

      <% if @item.is_active == true %>

        ￥<%= @item.tax_price %>(税込)

        <%= form_with model: @cart_item, url: cart_item_path: :post do |f| %>

          <%= f.hidden_field :item_id, value: @item.id %>

          <%= f.select :amount, (1..10).to_a, include_blank: "個数選択" %>

          <%= f.submit "カートに入れる" %>

      <% else %>

        SOLD OUT

      <% end %>

    </td>

  </tr>

</table>

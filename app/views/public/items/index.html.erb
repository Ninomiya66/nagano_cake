<div class="container">

  <div class="row">

    <div class="col-sm-12 px-sm-0 mt-4 mb-2">

      <h1>商品一覧</h1>

      <h5><%= @total.count %>件</h5>

    </div>

  </div>

  <div class="row mt-2 mb-2 text-center">

    <% @items.each do |item| %>

    <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">

      <div class="card mt-3 mb-3" style="width: 16rem; height: 16rem;">

        <p class="mt-2">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_image(100,100) %>
          <% end %>
        </p>

      <div class="card-body">

        <p class="card-text"><%= item.name %></p>

        <h5 class="card-title">税込価格(税抜価格)</h5>
        <p class="card-text">
          <% if item.is_active == true %>
            ￥<%= item.tax_price %>(<%= item.price %>)
          <% else %>
            SOLD OUT
          <% end %>
        </p>

      </div>

    </div>

  </div>

      <% end %>

  </div>

<%= paginate @items, theme: 'bootstrap-5' %>

</div>

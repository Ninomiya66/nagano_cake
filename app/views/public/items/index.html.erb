<h1>商品一覧</h1>
<h4><%= @total.count %>件</h4>

<table>

  <% @items.each do |item| %>

  <tr>

    <th>商品名</th>

    <td><%= item.name %></td>

  </tr>

  <tr>

    <th>商品画像</th>

    <td>

      <%= link_to item_path(item.id) do %>

        <%= image_tag item.get_image(80,80) %>

      <% end %>

    </td>

  </tr>

  <tr>

    <th>税込価格(税抜価格)</th>

    <td>

      <% if item.is_active == true %>

        ￥<%= item.tax_price %>(<%= item.price %>)

      <% else %>

      　SOLD OUT

      <% end %>

    </td>

  </tr>


  <% end %>

</table>

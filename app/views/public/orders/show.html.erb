<h1>注文履歴詳細</h1>

<% if @order.present? %>

<strong>注文情報</strong>

<table>

  <tbody>

  <tr>

    <th>注文日</th>

    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>

  </tr>

  <tr>

    <th>配送先</th>

    <td>

      <%= @order.postal_code %></br>
      <%= @order.address %></br>
      <%= @order.name %>

    </td>

  </tr>

  <tr>

    <th>支払方法</th>

    <td><%= @order.payment_method %></td>

  </tr>

  <tr>

    <th>ステータス</th>

    <td><%= @order.order_status %></td>

  </tr>

  </tbody>

</table>

<strong>請求情報</strong>

<table>

  <tr>

    <th>商品合計</th>

    <td><%= total_price(@order_details) %>円</td>

  </tr>

  <tr>

    <th>送料</th>

    <td><%= @order.postage %>円</td>

  </tr>

  <tr>

    <th>請求金額</th>

    <td><%= @order.price_total %>円</td>

  </tr>

</table>

<strong>注文内容</strong>

<table>

  <thead>

    <tr>

      <th>商品</th>

      <th>単価(税込)</th>

      <th>個数</th>

      <th>小計</th>

    </tr>

  </thead>

  <tbody>

    <% @order_details.each do |order_detail| %>

    <tr>

      <td><%= order_detail.item.name %></td>

      <td><%= order_detail.item.tax_price %>円</td>

      <td><%= order_details.amount %></td>

      <td><%= subtotal(order_detail) %></td>

    </tr>

    <% end %>

  </tbody>

</table>

<%= link_to "注文履歴一覧へ戻る", orders_path, class: "btn btn-info btn-lg order-index-back" %>

<% else %>

  <p>注文履歴がありません。</p>

<% end %>
<h1>注文履歴詳細</h1>

<% if @order.present? %>

<strong>注文情報</strong>

<table>

  <tbody>

  <tr>

    <th>注文日</th>

    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>

  </tr>

  <tr>

    <th>配送先</th>

    <td>

      <%= @order.postal_code %></br>
      <%= @order.address %></br>
      <%= @order.name %>

    </td>

  </tr>

  <tr>

    <th>支払方法</th>

    <td><%= @order.payment_method %></td>

  </tr>

  <tr>

    <th>ステータス</th>

    <td><%= @order.order_status %></td>

  </tr>

  </tbody>

</table>

<strong>請求情報</strong>

<table>

  <tr>

    <th>商品合計</th>

    <td><%= price_total(@order_details) %>円</td>

  </tr>

</table>
<h1 class="mt-3 mb-3">注文履歴一覧</h1>

<div class="row">

  <div class="col-xs-12">

    <% if @orders.present? %>

    <table>

      <thead>

        <tr>

          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>

        </tr>

      </thead>

      <tbody>

        <% @orders.each do |order| %>

        <tr>

          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>

          <td>
            <%= order.postal_code %></br>
            <%= order.address %></br>
            <%= order.name %>
          </td>

          <td>
            <% order.order_details.each do |order_detail| %>

              <%= order_detail.item.name %></br>

            <% end %>

            </td>

            <td><%= order.price_total %>円</td>

            <td><%= order.order_status %></td>

            <td><%= link_to "注文詳細", order_path(order) %></td>

          </tr>

          <% end %>

      </tbody>

    </table>

<% else %>

  <p>注文履歴がありません。</p>

<% end %>


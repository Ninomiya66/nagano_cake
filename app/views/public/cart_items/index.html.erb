<h1>バスケット</h1>

<% if @cart_items.present? %>

  <%= link_to "カートを空にする",cart_items_path, method: :delete, "data-confirm" => "本当に消しますか?" %>

  <table>

    <tr>

      <th>商品名</th>

      <th>単価(税込)</th>

      <th>数量</th>

      <th>小計</th>

      <th></th>

    </tr>

    <% @cart_items.each do |cart_item| %>

    <tr>

      <th><%= cart_item.item.name %></th>

      <th><%= cart_item.item.tax_price %></th>

      <th>

        <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>

        <%= f.number_field :amount, size: 10, min: 1 %>

        <%= f.submit "変更" %>

        <% end %>

      </th>

      <th><%= subtotal(cart_item) %></th>

      <th>

        <%= link_to "削除する", cart_item_path(cart_item), method: :delete, "data-confirm" => "#{cart_item.item.name}を消しますか?" %>

      </th>

    </tr>

    <% end %>

  </table>

  <%= link_to "買い物を続ける", root_path %>

  <table>

    <tr>

      <th>合計金額</th>

      <th><%= total_price(@cart_items) %></th>

    </tr>

  </table>

  <%= link_to " 情報入力に進む", root_path, class: "btn btn-success center-block" %>

<% else %>

    <%= render "no_cart" %>

<% end %>
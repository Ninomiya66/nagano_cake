<div class="container">

  <h1 class="mt-4 mb-4">My Page</h1>

  <div class="row">

    <h4 class="mt-2 mt-2">登録者情報</h4>
    <p><%= link_to "編集", edit_customer_path, class: "btn btn-outline-success ml-5" %></p>

    <table class="table">

      <tr>
        <th>氏名</th>
        <td><%= @customer.full_name %></td>
      </tr>

      <tr>
        <th>フリガナ</th>
        <td><%= @customer.full_name_kana %></td>
      </tr>

      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>

      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>

      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>

    </table>

    <div class="mr-4">

      <p>配送先<%= link_to "一覧を見る", addresses_path, class: "btn btn-outline-primary mt-3 ml-5 mb-3"%></p>

    </div>

    <div class="ml-4">

      <p>注文履歴<%= link_to "一覧を見る", orders_path,class: "btn btn-outline-primary mt-3 ml-5 mb-3"%></p>

    </div>

  </div>

</div>
<div class="container">

  <h2 class="mt-3 mb-3">新規会員登録</h2>

  <div class="row">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :氏名　%></br>
      <%= f.text_field :last_name, autofocus: true, :placeholder => "姓" %>
      <%= f.text_field :first_name, autofocus: true, :placeholder => "名" %>
    </div>

    <div class="form-group">
      <%= f.label :氏名 %></br>
      <%= f.text_field :last_name_kana, autofocus: true, :placeholder => "セイ" %>
      <%= f.text_field :first_name_kana, autofocus: true, :placeholder => "メイ" %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Enter your email..." %>
    </div>

    <div class="form-group">
      <%= f.label :郵便番号 %>(ハイフンなし)</br>
      <%= f.text_field :postal_code, autofocus: true, :placeholder => "4440099" %>
    </div>

    <div class="form-group">
      <%= f.label :住所 %></br>
      <%= f.text_field :address, autofocus: true, :placeholder => "Enter your address" %>
    </div>
    <div class="form-group">
      <%= f.label :電輪番号 %>(ハイフンなし)</br>
      <%= f.text_field :telephone_number, autofocus: true,  :placeholder => "08011921192"%>
    </div>

    <div class="from-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",  :placeholder => "password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",  :placeholder => "password" %>
    </div>

    <div class="form-gorup">
      <%= f.submit "新規登録", class: "btn btn-success mt-2 mb-2" %>
      <%= render "public/shared/links" %>
    </div>

    <% end %>

  </diV>

</div>

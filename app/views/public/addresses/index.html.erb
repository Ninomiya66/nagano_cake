<h1>配送先登録/一覧</h1>

<%= form_with model: @address, url: addresses_path do |f| %>

  <%= f.label :"郵便番号(ハイフンなし)" %></br>
  <%= f.text_field :postal_code %></br>

  <%= f.label :住所 %></br>
  <%= f.text_field :address %></br>

  <%= f.label :宛名 %></br>
  <%= f.text_field :name %></br>

  <%= f.submit "登録" %></br>

<% end %>

<% if @addresses.present? %>

<table>

  <thead>

    <tr>

      <th>郵便番号</th>

      <th>住所</th>

      <th>宛名</th>

      <th></th>

    </tr>

  </thead>

  <tbody>

    <% @addresses.each do |address| %>

    <tr>

      <td><%= address.postal_code %></td>

      <td><%= address.address %></td>

      <td><%= address.name %></td>

      <td>
        <%= link_to "編集", edit_address_path(address) %>
      </td>

      <td>
        <%= link_to "削除", address_path(address), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </td>

    </tr>

    <% end %>

  </tbody>

</table>

<% end %>




<div class="container">

  <h1 class="mt-3 mb-3">配送先登録/一覧</h1>

  <%= form_with model: @address, url: addresses_path do |f| %>

  <div class="form-group">

    <%= f.label :"郵便番号(ハイフンなし)" %></br>
    <%= f.text_field :postal_code %></br>

  </div>

  <div class="form-group">

    <%= f.label :住所 %></br>
    <%= f.text_field :address %></br>

  </div>

  <div class="form-group">

    <%= f.label :宛名 %></br>
    <%= f.text_field :name %></br>

  </div>

  <div class="form-group">

    <%= f.submit "登録", class: "btn btn-success" %></br>

  </div>

  <% end %>

  <% if @addresses.present? %>

    <table class="table table-hover table-bordered">

      <thead>

        <tr>

          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th cplspan="2"></th>

        </tr>

      </thead>

      <tbody>

        <% @addresses.each do |address| %>

          <tr>

            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集", edit_address_path(address), class: "btn btn-outline-success" %>
            </td>
            <td>
              <%= link_to "削除", address_path(address), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger" %>
            </td>

          </tr>

        <% end %>

      </tbody>

    </table>

  <% end %>

</div>




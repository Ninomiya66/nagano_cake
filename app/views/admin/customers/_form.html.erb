<div class="container">

  <h1 class="mt-3 mb-3">会員詳細情報</h1>

  <div class="row mt-5">

    <div class="col-10 offset-1">

      <table class="table">

        <tr>

          <th>会員ID</th>
          <td><%= @customer.id %></td>

        </tr>

        <tr>

          <th>氏名</th>
          <td><%= @customer.full_name %></td>

        </tr>

        <tr>

          <th>フリガナ</th>
          <td><%= @customer.full_name_kana %></td>

        </tr>

        <tr>

          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>

        </tr>

        <tr>

          <th>住所</th>
          <td><%= @customer.address %></td>

        </tr>

        <tr>

          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>

        </tr>

        <tr>

          <th>メールアドレス</th>
          <td><%= @customer.email %></td>

        </tr>

        <tr>

          <th>会員ステータス</th>

        <% if @customer.is_active == true %>

          <td class="text-danger">退会済み</td>

        <% else %>

          <td class="text-success">有効</td>

        <% end %>

        </tr>

      </table>

      <p>

        <%= link_to "編集", edit_admin_customer_path, class: "btn btn-outline-success mr-3" %>

        |

        <%= link_to "注文履歴一覧へ", admin_path, class: "btn btn-outline-info ml-3" %>

      </p>

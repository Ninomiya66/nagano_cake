<div class="container">

  <h1 class="mt-3 mb-3 text-center">会員情報編集</h1>

  <div class="row d-flex justify-content-center">

    <%= form_with model: @customer, url: admin_customer_path do |f| %>

    <div class="form-group col-xs-9">

      <%= f.label "会員ID" %>
      <%= f.label "#{@customer.id}", class: "ml-3" %></br>

    </div>

    <div class="form-group">

      <%= f.label "氏名" %></br>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %></br>

    </div>

    <div class="form-group">

      <%=f.label "フリガナ" %></br>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %></br>

    </div>

    <div class="form-group">

      <%= f.label "郵便番号" %></br>
      <%= f.text_field :postal_code %></br>

    </div>

    <div class="form-group">

      <%= f.label "住所" %></br>
      <%= f.text_field :address %></br>

    </div>

    <div class="form-group">

      <%= f.label "電話番号" %></br>
      <%= f.text_field :telephone_number %></br>

    </div>

    <div class="form-group">

      <%= f.label "メールアドレス" %></br>
      <%= f.text_field :email %></br>

    </div>

    <div class="form-group">

      <%= f.label "会員ステータス", class: "mr-4" %>

      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, "有効", class: "mr-4" %>

      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, "退会" %></br>

    </div>

    <div class="form-group">

      <%= f.submit "保存", class: "btn btn-outline-success mr-4" %>

      |

      <%= link_to "会員詳細へ", admin_customer_path, class: "btn btn-outline-info ml-4" %>

    </div>

    <% end %>

  </div>

</div>
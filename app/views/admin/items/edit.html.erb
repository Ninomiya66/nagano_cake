<h1>商品詳細編集</h1>

<%= flash[:notice] %>

<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>

  <table>

    <tr>

      <th><%= f.label :商品名 %></th>

      <td><%= f.text_field :name %></td>

    </tr>

    <tr>

      <th><%= f.label :商品画像 %></th>

      <td><%= f.file_field :image, accept: "image/*" %></td>

    </tr>

    <tr>

      <th><%= f.label :商品説明 %></th>

      <td><%= f.text_area :introduction, size: "40x10" %></td>

    </tr>

    <tr>

      <th><%= f.label :ジャンル %></th>

      <td><%= f.collection_select(:genre_id, Genre.all, :id, :name) %></td>

    </tr>

    <tr>

      <th><%= f.label :税抜価格 %></th>

      <td><%= f.text_field :price, size: "10" %>円</td>

    </tr>

    <tr>

      <th><%= f.label :販売状況 %></th>

      <td>

        <%= f.radio_button :is_active, true, checked: true %>
        <%= f.label :is_active, "販売中" %>

        <%= f.radio_button :is_active, false, checked: false %>
        <%= f.label :is_active, "販売停止中" %>

      </td>

    </tr>

    <tr>

      <th><%= f.submit "保存" %></th>

      |

      <td><%= link_to "Back", admin_item_path %></td>

    </tr>

<% end %>

  </table>
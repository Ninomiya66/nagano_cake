<h1>商品新規登録</h1>

<%= form_with model: @item, url: admin_items_path do |f| %>

<table>

  <tr>

    <th><%= f.label :商品名 %></th>

    <td><%= f.text_field :name, placeholder: "商品名" %></td>

  </tr>

  <tr>

    <th><%= f.label :商品画像 %></th>

    <td><%= f.file_field :image, accept: "image/*" %></td>

  </tr>

  <tr>

    <th><%= f.label :商品説明 %></th>

    <td><%= f.text_area :introduction, size: "40x10", placeholder: "商品の説明を書いてください" %></td>

  </tr>

  <tr>

    <th><%= f.label :ジャンル %></th>

    <td><%= f.collection_select(:genre_id, Genre.all, :id, :name, :prompt => "選択してください") %></td>

  </tr>

  <tr>

    <th><%= f.label :税抜価格 %></th>

    <td><%= f.text_field :price, placeholder: "100" %>円</td>

  </tr>

  <tr>

    <th><%= f.label :販売状況 %></th>

    <td>

      <%= f.radio_button :is_active, true, checked: true %>
      <%= f.label :is_active, "販売中" %>

      <%= f.radio_button :is_active, false, checked: false %>
      <%= f.label :is_active, "販売停止中" %>

    </td>

  </tr>

  <tr>

    <th><%= f.submit "新規登録" %></th>

  </tr>

<% end %>

</table>
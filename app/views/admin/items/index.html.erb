<div class="container">

  <h1 class="mt-4 mb-4">商品一覧</h1>

  <table class="table table-hover">

    <thead>

      <tr>

        <th>商品ID</th>
        <th>ジャンル</th>
        <th>商品名</th>
        <th>商品画像</th>
        <th>商品説明</th>
        <th>税抜価格</th>
        <th>販売状況</th>

      </tr>

    </thead>

    <tbody>

      <% @items.each do |item| %>

        <tr>

          <td><%= item.id %></td>
          <td><%= item.genre.name %></td>
          <td><%= link_to item.name, admin_item_path(item.id), class: "text-dark" %></td>
          <td><%= image_tag item.get_image(100,100) %></td>
          <td><%= item.introduction %></td>
          <td><%= item.price %></td>
          <td>
            <% if item.is_active == true %>

              <p>販売中</p>

            <% else %>

              <p>販売停止中</p>

            <% end %>
          </td>

        </tr>

      <% end %>

    </tbody>

  </table>

  <%= paginate @items, theme: 'bootstrap-5' %>

</div>

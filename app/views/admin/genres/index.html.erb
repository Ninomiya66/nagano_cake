<%= flash[:notice] %>

<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url: admin_genres_path, method: :post, remote: true do |f| %>

  <%= f.label :name, "ジャンル名" %></br>

  <%= f.text_field :name, id: "form" %></br>

  <%= f.submit "追加" %>

<% end %>

<table>

  <thead>

    <tr>

      <th>ジャンル</th>

      <th></th>

    </tr>

  </thead>

  <tbody>

    <%= render "genres", genre: @genres %>

  </tbody>

</table>